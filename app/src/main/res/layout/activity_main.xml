<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/hourly_rate"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/hourly_rate"
        app:layout_constraintStart_toStartOf="@+id/worked_hour"
        app:layout_constraintTop_toBottomOf="@+id/worked_hour" />

    <TextView
        android:id="@+id/total_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="328dp"
        android:text="@string/empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/desc_total" />

    <TextView
        android:id="@+id/desc_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:text="@string/desc_total"
        app:layout_constraintBaseline_toBaselineOf="@+id/total_payment"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/desc_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_tax"
        app:layout_constraintBaseline_toBaselineOf="@+id/tax"
        app:layout_constraintStart_toStartOf="@+id/desc_total" />

    <TextView
        android:id="@+id/tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/empty"
        app:layout_constraintStart_toStartOf="@+id/total_payment"
        app:layout_constraintTop_toBottomOf="@+id/total_payment" />

    <EditText
        android:id="@+id/worked_hour"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/worked_hour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="52dp"
        android:text="@string/calculate"
        app:layout_constraintBottom_toTopOf="@+id/desc_total"
        app:layout_constraintEnd_toEndOf="@+id/total_payment" />

</androidx.constraintlayout.widget.ConstraintLayout>